@namespace modulum.Components.Buttons

<MudButton
    Class="@Class"
    OnClick="@HandleClick"
    Variant="Variant.Filled"
    Disabled="@Disabled"
    Style="@($"color: white; background: {Colors.Green.Default};")"
>
    @Text
</MudButton>

@code
{
    [Parameter]
    public string Text { get; set; } = "Salvar";

    [Parameter]
    public string Class { get; set; } = "mr-4";
    
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    private async Task HandleClick()
    {
        Disabled = true;
        await OnClick.InvokeAsync();
        Disabled = false;
    }
    
    [Parameter]
    public bool Disabled { get; set; }
    [Parameter]
    public EventCallback<bool> DisabledChanged { get; set; }
}
