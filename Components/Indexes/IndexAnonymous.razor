@namespace modulum.Components.Indexes

    <MudContainer MaxWidth="MaxWidth.Large">
            <MudItem xs="12" md="10" lg="8">
                <MudImage Src="logo.png" Width="80" Height="80" Class="mb-4" />
                <MudText Typo="Typo.h2" Class="fw-bold mb-2">
                    Gerencie seu negócio com maestria
                </MudText>
                <MudText Typo="Typo.subtitle1" Class="mb-6">
                    Escola, Estacionamento, Eventos, Estoque: tudo integrado de maneira fácil e intuitiva.
                </MudText>

                <MudStack Row="true" JustifyContent="Center" Spacing="2" Class="mb-6">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/register/email" Size="Size.Large">
                        Cadastre-se agora
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Default" Href="/login" Size="Size.Large">
                        Já tenho conta
                    </MudButton>
                </MudStack>

                <MudDivider Class="my-6" />

                <MudText Typo="Typo.h6" Class="mb-4">
                    Modulum é um sistema que gerencia o seu negócio com diversas funcionalidades:
                </MudText>
                @foreach (var item in Beneficios)
                {
                    <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
                        <MudIcon Icon="@Icons.Material.Filled.CheckCircleOutline" Color="Color.Success" Size="Size.Medium" />
                        <MudText Class="ml-2" Style="font-size: 17px;">@item</MudText>
                    </MudStack>
                }
            </MudItem>
    </MudContainer>


@code
{
    [CascadingParameter(Name = "IsDarkTheme")]
    public bool IsDarkTheme { get; set; }

    protected override async Task OnInitializedAsync()
    {
        
    }

    List<string> Beneficios = new()
    {
        "Conheça nossa plataforma com ferramentas disponíveis para testar",
        "Crie seu sistema com templates intuitivos",
        "Personalize o que você quer armazenar",
        "Criação fácil com ajuda de dicas e modelos",
        "Controle de permissões por usuário",
        "Suporte contínuo e evolução constante"
    };
}
