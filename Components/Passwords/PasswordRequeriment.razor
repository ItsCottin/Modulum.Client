@namespace modulum.Components.Passwords

<MudText Class="ml-2 d-flex align-center flex-grow-1 gap-2">
    @if (Ok)
    {
        <MudIcon Icon="@Icons.Material.Filled.CheckBox" Size="Size.Small" Color="Color.Success" />
    }
    else
    {
        <MudIcon Icon="@Icons.Material.Filled.CheckBoxOutlineBlank" Size="Size.Small" />
    }
    @Text
</MudText>

@code
{
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public bool Ok { get; set; }
}
