@page "/register/concluido"

@attribute [AllowAnonymous]

<MudContainer Class="" MaxWidth="MaxWidth.ExtraExtraLarge">
    <AuthorizeView Context="authContext">
        <Authorized>
            <MudAlert Severity="Severity.Success">Você já está logado como @authContext.User.Identity?.Name.</MudAlert>
        </Authorized>
        <NotAuthorized>
            <MudOverlay @bind-Visible="@loading" DarkBackground="true" Absolute="false">
                <modulum.Shared.Loading />
            </MudOverlay>
                <MudCard Outlined="true" Class="@($"{GetResponsivePadding()} mx-auto")" Style="max-width: 700px;">
                    <MudCardContent Class="@GetResponsivePadding()">
                        <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Spacing="2">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle"
                                     Color="Color.Success"
                                     Size="Size.Large"
                                     Class="mt-6" />
                        </MudStack>
                        <MudText Typo="Typo.h4" Align="Align.Center" Class="mt-6">Cadastro finalizado com sucesso!</MudText>
                    <MudText Typo="Typo.subtitle2" Align="Align.Center" Color="Color.Info" Class="mt-6">
                            Sua senha foi cadastrada e sua conta está pronta para uso.
                        </MudText>
                        <MudStack Spacing="1" Class="mt-10">
                            <MudButton Href="/login"
                                       Color="Color.Primary"
                                       Variant="Variant.Filled"
                                       Size="Size.Large"
                                       Class="mt-1 pa-3">
                                Acessar
                            </MudButton>
                        </MudStack>
                    
                    </MudCardContent>
                </MudCard>
        </NotAuthorized>
    </AuthorizeView>
</MudContainer>

