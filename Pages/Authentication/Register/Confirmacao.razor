@page "/register/confirmacao"

@attribute [AllowAnonymous]

<MudContainer Class="" MaxWidth="MaxWidth.ExtraExtraLarge">
    <AuthorizeView Context="authContext">
        <Authorized>
            <MudAlert Severity="Severity.Success">Você já está logado como @authContext.User.Identity?.Name.</MudAlert>
        </Authorized>
        <NotAuthorized>
            <MudOverlay @bind-Visible="@loading" DarkBackground="true" Absolute="false">
                <modulum.Shared.Loading />
            </MudOverlay>
            <EditForm Model="@_twoFactorModel" method="post" FormName="Cadastre-se" OnValidSubmit="DoConfirmaEmail">
                <MudCard Outlined="true" Class="@($"{GetResponsivePadding()} mx-auto")" Style="max-width: 700px;">
                    <MudCardContent Class="@GetResponsivePadding()">
                        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-1">Confirme seu email</MudText>
                        <MudText Typo="Typo.overline" Align="Align.Center" Class="mb-1">E-mail: "@_twoFactorModel.Email"</MudText>
                        <MudText Typo="Typo.subtitle2" Align="Align.Center" Color="Color.Secondary" Class="mb-4">
                            Informe abaixo o código de confirmação que enviamos para o seu E-mail
                        </MudText>
                        <FluentValidationValidator @ref="_fluentValidationValidator" />
                        <FormValidator @ref="_registerFormValidator"></FormValidator>
                        <MudText Color="@Color.Error">
                            <MudText Color="@Color.Error">
                                <ValidationSummary />
                            </MudText>
                        </MudText>
                        <MudStack Row="true" Justify="Justify.Center" Spacing="2">
                            <MudTextField @bind-Value="Code0"
                                          MaxLength="1"
                                          Immediate="true"
                                          T="string"
                                          TextChanged="@(() => HandleInput())"
                                          Style="width: 50px;" />

                            <MudTextField @bind-Value="Code1"
                                          MaxLength="1"
                                          Immediate="true"
                                          T="string"
                                          TextChanged="@(() => HandleInput())"
                                          Style="width: 50px;" />

                            <MudTextField @bind-Value="Code2"
                                          MaxLength="1"
                                          Immediate="true"
                                          T="string"
                                          TextChanged="@(() => HandleInput())"
                                          Style="width: 50px;" />

                            <MudTextField @bind-Value="Code3"
                                          MaxLength="1"
                                          Immediate="true"
                                          T="string"
                                          TextChanged="@(() => HandleInput())"
                                          Style="width: 50px;" />

                            <MudTextField @bind-Value="Code4"
                                          MaxLength="1"
                                          Immediate="true"
                                          T="string"
                                          TextChanged="@(() => HandleInput())"
                                          Style="width: 50px;" />

                            <MudTextField @bind-Value="Code5"
                                          MaxLength="1"
                                          Immediate="true"
                                          T="string"
                                          TextChanged="@(() => HandleInput())"
                                          Style="width: 50px;" />
                        </MudStack>

                        <!--<MudTextField InputType="InputType.Text"
                                      Margin="Margin.Normal"
                                      AutoFocus="true"
                                      Label="Codigo de verificação"
                                      Class="mt-0 pb-3"
                                      OnlyValidateIfDirty="true"
                                      @bind-Value="@_twoFactorModel.Code"
                                      Variant="Variant.Text"
                                      Required="true"
                                      RequiredError="Informe!"
                                      For="@(() => _twoFactorModel.Code)" />-->
                        <MudStack Spacing="1" Class="mt-10">
                            <MudButton Size="Size.Large"
                                       OnClick="@DoConfirmaEmail"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Class="pa-3">
                                Validar
                            </MudButton>
                        </MudStack>
                        <MudStack Spacing="1" Class="mt-10" AlignItems="AlignItems.Start">
                            <MudLink Color="Color.Info" Underline="Underline.None" OnClick="SetTwoFactorCode">Resgate o código Aqui</MudLink>
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </EditForm>
        </NotAuthorized>
    </AuthorizeView>
</MudContainer>

<style>
    .digit-box input {
        font-size: 24px;
        text-align: center;
    }
</style>