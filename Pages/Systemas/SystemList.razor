@page "/system"

<PageTitle>Meus Sistemas</PageTitle>

<div class="container mt-5">
    <h2 class="text-center mb-4">Meus Sistemas</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Card de exemplo de um sistema -->
        @foreach (var sistema in Sistemas)
        {
            <div class="col">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">@sistema.Nome</h5>
                        <p class="card-text text-muted">@sistema.Descricao</p>
                        <button class="btn btn-primary w-100">Acessar</button>
                    </div>
                </div>
            </div>
        }

        <!-- Card de adicionar novo sistema -->
        <div class="col">
            <div class="card shadow-sm border-0 text-center add-system-card" @onclick="AdicionarNovoSistema">
                <div class="card-body d-flex align-items-center justify-content-center">
                    <i class="bi bi-plus-lg fs-1 text-muted"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<SistemaModel> Sistemas = new()
    {
        new SistemaModel { Nome = "Gestor Financeiro", Descricao = "Gerencie suas finanças com facilidade" },
        new SistemaModel { Nome = "Controle de Estoque", Descricao = "Monitore seus produtos e pedidos" }
    };

    private void AdicionarNovoSistema()
    {
        // Aqui você pode redirecionar para a página de criação de sistemas
        Console.WriteLine("Redirecionar para criação de sistema");
    }

    public class SistemaModel
    {
        public string Nome { get; set; } = "";
        public string Descricao { get; set; } = "";
    }
}