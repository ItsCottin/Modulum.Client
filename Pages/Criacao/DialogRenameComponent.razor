<MudDialog Style="min-width: 600px;">
    <DialogContent>
        <MudText>@ContentText</MudText>
        <MudTextField @bind-Value="_model.NovoNome" Label="Nome da sua Tela" Variant="Variant.Text"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="@_loading">Cancelar</MudButton>
        <MudButton StartIcon="@(_loading ? "" : Icons.Material.Filled.SaveAs)" Color="@Color" Variant="Variant.Filled" OnClick="Submit" Disabled="@_loading">
            @if (_loading)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Renomeando...</MudText>
            }
            else
            {
                <MudText>@ButtonText</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

