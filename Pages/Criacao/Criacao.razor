@page "/System/Create"

<MudContainer Class="my-4 px-4">
    <MudText Typo="Typo.h4" Style="font-weight: bold" Class="ml-4">
        <MudIcon Icon="@Icons.Material.Filled.Insights" Class="mr-1 mb-n1" Size="Size.Large" />
        Criação
    </MudText>
    <MudAlert Class="mt-4" Severity="Severity.Normal" NoIcon="true" Variant="Variant.Text" Elevation="1">
        <MudStack Row="true" Justify="Justify.SpaceAround">
            <MudText>Aqui você pode criar seu sistema unico e personalizado diferente de tudo no mercado</MudText>
        </MudStack>
    </MudAlert>
    <MudGrid Class="pt-4" Elevation="2" Style="padding: 24px;">
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.CenterFocusStrong" Text="Nome" Link="System/Create/Nome" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.FitScreen" Text="Telas" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.PlaylistAddCheck" Text="Campos" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.AppRegistration" Text="Desenho" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.Settings" Text="Configuração" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.AccountTree" Text="Ligação" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.ScreenshotMonitor" Text="Visualização" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.SettingsEthernet" Text="Validar" />
        <IndexCard Loading="@_loading" Icon="@Icons.Material.Filled.NotificationsNone" Text="Dicas" />
    </MudGrid>
    <MudGrid Class="pt-4 mt-4" Spacing="0">
        <MudItem xs="12">
            <MudStack Justify="Justify.FlexEnd">
                <MudButton Class="px-8"
                        StartIcon="@Icons.Material.Filled.SaveAlt"
                        IconSize="Size.Large"
                        Variant="Variant.Filled"
                        Style="height: 60px;"
                        Color="Color.Primary"
                        Href=""
                        Disabled="true">
                    <MudText Typo="Typo.h6">
                        Criar
                    </MudText>
                </MudButton>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudContainer>
@code {
    private bool _loading = false;
}
