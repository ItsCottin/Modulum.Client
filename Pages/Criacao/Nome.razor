@page "/System/Create/Nome"

<MudContainer Class="my-4 px-4">
    <MudText Typo="Typo.h4" Style="font-weight: bold" Class="ml-4">
        <MudIcon Icon="@Icons.Material.Filled.CenterFocusStrong" Class="mr-1 mb-n1" Size="Size.Large" />
        Templete
    </MudText>
    <MudAlert Class="my-4" Severity="Severity.Normal" NoIcon="true" Variant="Variant.Text" Elevation="1">
        <MudStack Row="true" Justify="Justify.SpaceAround">
            <MudText>Escolha um template ou crie um do zero</MudText>
        </MudStack>
    </MudAlert>
    <MudPaper Class="pt-4" Elevation="2" Style="padding: 24px;">

        <MudTextField Label="Título do Sistema" @bind-Value="tituloSistema" Variant="Variant.Outlined" Class="mb-6 mud-width-full" />

        <MudCarousel Class="mud-width-full" Style="height: 400px;" ShowArrows="true" ShowBullets="false" EnableSwipeGesture="true" AutoCycle="false" TData="object">
            <MudCarouselItem Transition="Transition.Slide" Color="@Color.Primary">
                <div class="d-flex" style="height:100%">
                    <MudIcon Class="mx-auto my-auto" Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large" />
                </div>
            </MudCarouselItem>
            <MudCarouselItem Transition="Transition.Slide" Color="@Color.Secondary">
                <div class="d-flex" style="height:100%">
                    <MudIcon Class="mx-auto my-auto" Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large" />
                </div>
            </MudCarouselItem>
            <MudCarouselItem Transition="Transition.Slide">
                <div class="d-flex" style="height:100%">
                    <MudIcon Class="mx-auto my-auto" Icon="@Icons.Custom.Brands.MudBlazor" Color="@Color.Primary" Size="@Size.Large" />
                </div>
            </MudCarouselItem>
        </MudCarousel>

        <MudStack Row="true" Class="mt-6" Justify="Justify.SpaceBetween">
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/System/Create">
                Voltar
            </MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="true">
                Salvar
            </MudButton>
        </MudStack>

    </MudPaper>
</MudContainer>

@code {
    private string tituloSistema;
}
