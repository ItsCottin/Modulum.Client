@page "/System"

<MudContainer Class="mt-4 mb-8" MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudCard Class="p-xxl-5 p-xl-5 p-sm-4 p-md-3 p-lg-2" Outlined="true">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mt-9 mb-4">Meus Sistemas</MudText>
        <MudGrid GutterSize="3" Justify="Justify.Center" Class="pl-6">
            @foreach (var sistema in Sistemas)
            {
                <MudItem xs="12" sm="6" md="4" Class="h-100 text-center align-self-end pa-10">

                    <MudStack Class="align-self-start">
                        <MudText Typo="Typo.h6">@sistema.Nome</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">@sistema.Descricao</MudText>
                    </MudStack>
                    <MudStack Class="justify-center mt-4">
                        <MudButton Variant="Variant.Outlined" Color="Color.Info" FullWidth="true">Acessar</MudButton>
                    </MudStack>
                </MudItem>
            }
            <MudItem xs="12" sm="6" md="4" Class="h-100 text-center pa-10 align-self-end">
                <MudPaper Class="h-100 w-100 d-flex justify-center"
                          Style="cursor:pointer; height: 100%; border: 2px dashed #444;"
                          @onclick="AdicionarNovoSistema">
                    <MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Large" Color="Color.Default" />
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudCard>
</MudContainer>

@code {
    private List<SistemaModel> Sistemas = new()
    {
        new SistemaModel { Nome = "Gestor Financeiro", Descricao = "Gerencie suas finanças com facilidade" },
        new SistemaModel { Nome = "Controle de Estoque", Descricao = "Monitore seus produtos e pedidos" }
    };

    private void AdicionarNovoSistema()
    {
        _loadingService.Show();
        _navigationManager.NavigateTo("/System/Create");
        _loadingService.Hide();
    }

    public class SistemaModel
    {
        public string Nome { get; set; } = "";
        public string Descricao { get; set; } = "";
    }
}